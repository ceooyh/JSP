<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>기초문법</title>
</head>
<body>
	<!-- 선언문 작성 -->
	<%!
		//필드와 메서드를 작성하는장소(jsp를 클래스라고 생각하면 된다.)
		String message = "선언문 메세지";
		//필드 선언하고 getMessage란 메서드 한개 만든거라고 보면된다.
		public String getMessage(){
			return message;
		}
	%>
	
	
	<!-- 표현식 작성 -->
	선언문 필드 테스트 : <%=message %><br>
	
</body>
</html>